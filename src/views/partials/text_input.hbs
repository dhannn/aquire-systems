{{!-- Text Input Partial for Admin_Student, Admin_User--}}

{{!-- INPUT IS REQUIRED --}}
{{#if required }}
    {{#if size_large}}  {{!-- MAKE INPUT FIELD LARGER --}}  
        <input required name={{name}} type="text" class="form-control col-3 rounded-0" placeholder="{{label}}" />
        {{else}}
            <input required name={{name}} type="text" class="form-control col-2 rounded-0" placeholder="{{label}}" />
    {{/if}}

{{!-- INPUT IS NOT REQUIRED --}}
    {{else}}
        {{#if size_large}}
            <input name={{name}} type="text" class="form-control col-3 rounded-0" placeholder="{{label}}" />
            {{else}}
                <input name={{name}} type="text" class="form-control col-2 rounded-0" placeholder="{{label}}" />
        {{/if}}
{{/if}}