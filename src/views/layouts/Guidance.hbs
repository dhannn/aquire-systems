                            <div class="form-button-add text-center rounded-0 border border-white" role="button"
                                tabindex="0">
                                <label for="add_admission_record">Add Admission Record</label>
                                <input class="add-button" type="submit" value="" id="add_admission_record"/>
                            </div>
