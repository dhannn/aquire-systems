            <section class="flex-column col-6 p-0 mx-5">


                
                <form id="cummilative-anectodal-form" class="input-group-custom" method="GET" action="guidance/cummulative">
                    <div class="row mx-half">
                        <div class="col-5 px-0">
                            <input required name="student_id" type="text" id="studentId-cummilative-anecdotal"
