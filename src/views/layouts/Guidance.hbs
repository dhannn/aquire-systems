<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Guidance | AquiRe Systems</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="/style.css">

</head>

<body>

    {{#if message}}
        {{> Message message=message}}
    {{/if}}
    
    {{> Navbar userRole='Guidance'}}
    
    <div class="container-fluid">
        <div class="row mx-5">
            <aside class="aside col-2">
                <p class="fw-bold fs-4 mb-0">Enrolled Students</p>
                <p>SY 2023 - 2024</p>
                <ul class="sidebar-links nav flex-column">
                    {{> SidebarLinks grade="Kinder" href="#"}}
                    {{> SidebarLinks grade="Senior Kinder" href="#"}}
                    {{> SidebarLinks grade="Grade 1" href="#"}}
                    {{> SidebarLinks grade="Grade 2" href="#"}}
                    {{> SidebarLinks grade="Grade 3" href="#"}}
                    {{> SidebarLinks grade="Grade 4" href="#"}}
                    {{> SidebarLinks grade="Grade 5" href="#"}}
                    {{> SidebarLinks grade="Grade 6" href="#"}}
                    {{> SidebarLinks grade="Grade 7" href="#"}}
                    {{> SidebarLinks grade="Grade 8" href="#"}}
                    {{> SidebarLinks grade="Grade 9" href="#"}}
                    {{> SidebarLinks grade="Grade 10" href="#"}}
                    {{> SidebarLinks grade="Grade 11" href="#"}}
                    {{> SidebarLinks grade="Grade 12" href="#"}}
                </ul>
            </aside>

            <section class="flex-column col-6 p-0 mx-5">
                <form class="form input-group-custom" role="search">
                    <div class="row mx-half mb-0">
                        <div class="col-11 px-0">
                            <input class="form-control rounded-0 border" type="search" placeholder="Search"
                                aria-label="Search by ID or Last Name, First Name...">
                        </div>
                        <div class="col px-0">
                            <button class="form-button-add text-center rounded-0 border w-100 display-block" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>
                </form>

                <form id="add-student-form" role="form" method="POST" action="/guidance/records" class="input-group-custom my-3">
                    <div class="row mx-half mb-0">
                        <div class="col-8 px-0">
                            <div class="row mx-half mb-0 h-100">
                                <div class="col-6 border px-0">
                                    <input required name="student_id" type="text" id="studentId"
                                        class="form-control rounded-0 border border-white" placeholder="New Student ID" />
                                </div>
                                <div class="col-6 px-0">
                                    <div class="dropdown-custom student-form btn-group col-12 px-0 h-100">
                                        <button class="checkbox-dropdown btn dropdown-toggle rounded-0 border border-white"
                                            type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        </button>
                                        <div class="dropdown-menu col-12 rounded-0">
                                            {{> CheckboxFormGroup checkboxName="recordTypes[]" checkboxValue="MC" checkboxId="checkboxMC" checkboxLabel="Medical Certificate"}}
                                            {{> CheckboxFormGroup checkboxName="recordTypes[]" checkboxValue="SRF" checkboxId="checkboxSRF" checkboxLabel="Scholastic Record Form"}}
                                            {{> CheckboxFormGroup checkboxName="recordTypes[]" checkboxValue="IS" checkboxId="checkboxIS" checkboxLabel="Information Sheet"}}
                                            {{> CheckboxFormGroup checkboxName="recordTypes[]" checkboxValue="BEF" checkboxId="checkboxBEF" checkboxLabel="Basic Education Form"}}
                                            {{> CheckboxFormGroup checkboxName="recordTypes[]" checkboxValue="SHSF" checkboxId="checkboxSHSF" checkboxLabel="Senior High School Form"}}
                                            {{> CheckboxFormGroup checkboxName="recordTypes[]" checkboxValue="RF" checkboxId="checkboxRF" checkboxLabel="Recommendation Form"}}                       
                                        </div>
                                    </div>
                                </div>
                            </div>
                            </div>
                                <div class="col-4 px-0 text-center">
                                    <button id="add_admission_record" type="submit" class="form-button-add text-center rounded-0 border w-100">
                                        <span>Add Admission Record</span>
                                    </button>
                                </div>
                        </div>
                </form>

                <div class="container-fluid">
                    <div class="row mt-3 table-header">
                        <div class="col-8 px-0">
                            <div class="row mx-half mb-0 h-100 fw-bold">
                                <div class="col-6 border border-white p-2">
                                    <span>Student ID</span>
                                </div>
                                <div class="col-6 border border-white p-2">
                                    <span>Record</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-4 border border-white p-2">
                            <span></span>
                        </div>
                    </div>
                </div>

                <div class="data-table container-fluid">
                    {{#each studentRecords}}
                        <div class="row list-div">
                            <div class="col-8">
                                <div class="row">
                                    <div class="col-6 border border-white p-2">
                                        <span>{{student_id}}</span>
                                    </div>
                                    <div class="col-6 border border-white p-2">
                                        <span>{{recordId}}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4 p-2">
                                <div class="edit-button-div col-12 text-center rounded-0 h-100" role="button" tabindex="0">
                                    <i class="fa-solid fa-pen"></i>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </section>
        </div>
    </div>
        <!-- Include Bootstrap JS (optional, for dropdown menus) -->
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/84cb3b7f2b.js" crossorigin="anonymous"></script>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                var timeout = null;

                document.getElementById('studentId').addEventListener('keyup', function () {
                    clearTimeout(timeout);
                    timeout = setTimeout(function() {
                        var textvalue = document.getElementById('studentId').value;
                        var xhr = new XMLHttpRequest();
                        xhr.open('POST', '/guidance', true);
                        xhr.setRequestHeader('Content-Type', 'application/json');
                        xhr.onload = function() {
                            if(xhr.status === 200) {
                                if (xhr.status === 200) {
                                    var response = JSON.parse(xhr.responseText);
                                    var recordIds = response.recordIds;

                                    // Update checkboxes
                                    var checkboxes = document.querySelectorAll('[name="recordTypes[]"]');
                                    checkboxes.forEach(function(checkbox) {
                                        if (recordIds.includes(checkbox.value)) {
                                            checkbox.checked = true;
                                            checkbox.classList.add('greyed-out');
                                        } else {
                                            checkbox.checked = false;
                                            checkbox.classList.remove('greyed-out');
                                        }
                                    });
                                }
                            }
                        };
                        xhr.onerror = function() {
                            console.error('Request Error...');
                        };
                        xhr.send(JSON.stringify({textData: textvalue}));
                    }, 500);
                });
            });
        </script>
</body>

</html>