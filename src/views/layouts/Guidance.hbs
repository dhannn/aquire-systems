    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="/style.css">

</head>

<body>
    {{> Navbar userRole='Guidance'}}

    {{#if message}}
        {{> Message message=message}}
    {{/if}}

    <div class="container-fluid">
        <div class="row mx-5">
            <aside class="aside col-2">
                <p class="fw-bold fs-4 mb-0">Enrolled Students</p>
                <p>SY 2023 - 2024</p>
                <ul class="sidebar-links nav flex-column">
                    {{> SidebarLinks grade="Kinder" href="#"}}
                    {{> SidebarLinks grade="Senior Kinder" href="#"}}
                    {{> SidebarLinks grade="Grade 1" href="#"}}
                    {{> SidebarLinks grade="Grade 2" href="#"}}
                    {{> SidebarLinks grade="Grade 3" href="#"}}
                    {{> SidebarLinks grade="Grade 4" href="#"}}
                    {{> SidebarLinks grade="Grade 5" href="#"}}
                    {{> SidebarLinks grade="Grade 6" href="#"}}
                    {{> SidebarLinks grade="Grade 7" href="#"}}
                    {{> SidebarLinks grade="Grade 8" href="#"}}
                    {{> SidebarLinks grade="Grade 9" href="#"}}
                    {{> SidebarLinks grade="Grade 10" href="#"}}
                    {{> SidebarLinks grade="Grade 11" href="#"}}
                    {{> SidebarLinks grade="Grade 12" href="#"}}
                </ul>
            </aside>

            <section class="flex-column col-6 p-0 mx-5">


                
                <form id="cummilative-anectodal-form" class="input-group-custom" method="GET" action="guidance/cummulative">
                    <div class="row mx-half">
                        <div class="col-5 px-0">
                            <input required name="student_id" type="text" id="studentId-cummilative-anecdotal"
                                class="form-control rounded-0 border border-white" placeholder="Student ID" />  
                        </div>

                        <div class="col-3 px-0 m-button">
                            <div class="form-button-add text-center rounded-0 border border-white" role="button"
                                tabindex="0">
                                <label for="add_anecdotal_record">Add Anecdotal Record</label>
                                <input class="add-button" type="submit" value="" id="add_anecdotal_record"/>
                            </div>
                        </div>

                        <div class="col-3 px-0 m-button">
                            <div class="form-button-add text-center rounded-0 border border-white" role="button" tabindex="0">
                                <label for="edit_cummulative_record">Edit Cummulative Record</label>
                                <input class="add-button" type="submit" value="" data-bs-toggle="modal" data-bs-target="#exampleModalScrollable"  id="edit_cummulative_record"/>
                            </div>
                        </div>


                    </div>
                </form>

                

                <div class="row my-3">
                    <form class="d-flex" role="search">
                        <input class="form-control rounded-0 mx-0" type="search"
                            placeholder="Search by ID or Last Name, First Name..." aria-label="Search">
                        <button class="button-yellow btn rounded-0 custom-width-12 pt-1 mx-0 border-0" type="submit"><i
                                class="bi bi-search"></i></button>
                    </form>
                </div>

                <div class="table-header container-fluid">
                    <div class="row my-3">
                        <div class="col-2 border border-white p-2">
                            <span>Student ID</span>
                        </div>
                        <div class="col-2 border border-white p-2">
                            <span>Record</span>
                        </div>
                    </div>
                </div>

                <form id="add-student-form" role="form" method="POST" action="/guidance/records"
                    class="input-group-custom">
                    <div class="row mx-half">
                        <div class="col-4 px-0">
                            <input required name="student_id" type="text" id="studentId"
                                class="form-control rounded-0 border border-white" placeholder="Student ID" />
                        </div>
                        <div class="dropdown-custom student-form btn-group col-4 px-0">
                            <button class="checkbox-dropdown btn dropdown-toggle rounded-0 border border-white"
                                type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            </button>
                            <div class="dropdown-menu col-12 rounded-0">
                                {{> CheckboxFormGroup checkboxName="recordTypes[]" checkboxValue="MC" checkboxId="checkboxMC" checkboxLabel="Medical Certificate"}}
                                {{> CheckboxFormGroup checkboxName="recordTypes[]" checkboxValue="SRF" checkboxId="checkboxSRF" checkboxLabel="Scholastic Record Form"}}
                                {{> CheckboxFormGroup checkboxName="recordTypes[]" checkboxValue="IS" checkboxId="checkboxIS" checkboxLabel="Information Sheet"}}
                                {{> CheckboxFormGroup checkboxName="recordTypes[]" checkboxValue="BEF" checkboxId="checkboxBEF" checkboxLabel="Basic Education Form"}}
                                {{> CheckboxFormGroup checkboxName="recordTypes[]" checkboxValue="SHSF" checkboxId="checkboxSHSF" checkboxLabel="Senior High School Form"}}
                                {{> CheckboxFormGroup checkboxName="recordTypes[]" checkboxValue="RF" checkboxId="checkboxRF" checkboxLabel="Recommendation Form"}}                       
                            </div>
                        </div>
                        <div class="col-4 px-0">
                            <div class="form-button-add text-center rounded-0 border border-white" role="button"
                                tabindex="0">
                                <label for="add_admission_record">Add Admission Record</label>
                                <input class="add-button" type="submit" value="" id="add_admission_record"/>
                            </div>
                        </div>
                    </div>
                </form>
                <div id="data-table" class="data-table container-fluid my-3">
                    {{#each studentRecords}}
                        <div class="row list-div">
                            <div class="col-3 border p-2">
                                <span>{{student_id}}</span>
                            </div>
                            <div class="col-6 border p-2">
                                <span>{{recordId}}</span>
                            </div>
                            <div class="edit-button-div col-3 text-center rounded-0" role="button" tabindex="0">
                                <i class="fa-solid fa-pen"></i>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </section>
        </div>
    </div>


    <div class="modal fade" id="exampleModalScrollable" tabindex="-1" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable modal-xl">
        <!-- Modal content goes here -->
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalScrollableTitle">Edit Cummulative Record</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
         
            <div class="modal-body">
                <form id="cummulative-form" method="POST" action="/guidance/cummulative">
                <input type="hidden" name="student_id" id="studentIdField">
                <h1>GradeSchool</h1>
                {{> ROTR_Ability-Intelligence_Test_gs }}
                    <br><br>
                <h1>HighSchool</h1>
                {{> ROTR_Ability-Intelligence_Test_hs }}
            
                <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
                <p>This content should appear at the bottom after you scroll.</p>
            </div>
            <div class="modal-footer">
                <input type="submit" class="btn btn-primary btn-yellow">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
        </form>
        </div>
    </div>



        <!-- Include Bootstrap JS (optional, for dropdown menus) -->
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/84cb3b7f2b.js" crossorigin="anonymous"></script>




    <script>
    document.addEventListener('DOMContentLoaded', function() {
        var timeout = null;
        document.getElementById('studentId').addEventListener('keyup', function () {
            clearTimeout(timeout);
            timeout = setTimeout(function() {
                var textvalue = document.getElementById('studentId').value;
                var xhr = new XMLHttpRequest();
                xhr.open('POST', '/guidance', true);
                xhr.setRequestHeader('Content-Type', 'application/json');
                xhr.onload = function() {
                    if(xhr.status === 200) {
                        if (xhr.status === 200) {
                            var response = JSON.parse(xhr.responseText);
                            var recordIds = response.recordIds;

                            // Update checkboxes
                            var checkboxes = document.querySelectorAll('[name="recordTypes[]"]');
                            checkboxes.forEach(function(checkbox) {
                                if (recordIds.includes(checkbox.value)) {
                                    checkbox.checked = true;
                                    checkbox.classList.add('greyed-out');
                                } else {
                                    checkbox.checked = false;
                                    checkbox.classList.remove('greyed-out');
                                }
                            });
                        }
                    }
                };
                xhr.onerror = function() {
                    console.error('Request Error...');
                };
                xhr.send(JSON.stringify({textData: textvalue}));
            }, 500);
        });
        document.getElementById('studentId-cummilative-anecdotal').addEventListener('keyup', function () {
            clearTimeout(timeout);
            timeout = setTimeout(function() {
                var baseStudentId = document.getElementById('studentId-cummilative-anecdotal').value;
                var xhr = new XMLHttpRequest();
                xhr.open('POST', '/guidance/cummulative-get', true);
                xhr.setRequestHeader('Content-Type', 'application/json');
                xhr.onload = function() {
                    if (xhr.status === 200) {
                        var response = JSON.parse(xhr.responseText);
                        var schoolHistory = response.schoolHistory;
                        var familyData = response.familyData;
                        var schoolActivity = response.schoolActivity;
                        var abilityIntelligenceTest = response.abilityIntelligenceTest;
                        document.querySelector('[name="enteredFrom"]').value = schoolHistory.enteredFrom;
                        document.querySelector('[name="schoolYearAdmitted"]').value = schoolHistory.schoolYearAdmitted;
                        document.querySelector('[name="gradeLevelEntered"]').value = schoolHistory.gradeLevelEntered;
                        document.querySelector('[name="otherSchoolsAttended"]').value = schoolHistory.otherSchoolsAttended;
                        document.querySelector('[name="student_name"]').value = familyData.studentName;
                        document.querySelector('[name="student_birthday"]').value = familyData.studentBirthday;
                        document.querySelector('[name="student_citizenship"]').value = familyData.studentCitizenship;
                        document.querySelector('[name="student_address"]').value = familyData.studentAddress_TelOrCpNum;
                        document.querySelector('[name="student_occupation"]').value = familyData.studentOccupation;
                        document.querySelector('[name="father_name"]').value = familyData.fatherName;
                        document.querySelector('[name="father_birthday"]').value = familyData.fatherBirthday;
                        document.querySelector('[name="father_citizenship"]').value = familyData.fatherCitizenship;
                        document.querySelector('[name="father_address"]').value = familyData.fatherAddress_TelOrCpNum;
                        document.querySelector('[name="father_occupation"]').value = familyData.fatherOccupation;
                        document.querySelector('[name="mother_name"]').value = familyData.motherName;
                        document.querySelector('[name="mother_birthday"]').value = familyData.motherBirthday;
                        document.querySelector('[name="mother_citizenship"]').value = familyData.motherCitizenship;
                        document.querySelector('[name="mother_address"]').value = familyData.motherAddress_TelOrCpNum;
                        document.querySelector('[name="mother_occupation"]').value = familyData.motherOccupation;
                        document.querySelector('[name="guardian_name"]').value = familyData.guardianName;
                        document.querySelector('[name="guardian_birthday"]').value = familyData.guardianBirthday;
                        document.querySelector('[name="guardian_citizenship"]').value = familyData.guardianCitizenship;
                        document.querySelector('[name="guardian_address"]').value = familyData.guardianAddress_TelOrCpNum;
                        document.querySelector('[name="guardian_occupation"]').value = familyData.guardianOccupation;
                        document.querySelector('[name="totalChildren"]').value = familyData.totalNumberOfChildren;
                        document.querySelector('[name="rankFamily"]').value = familyData.rankInTheFamily;
                        var languageSelected = familyData.languageSpokenAtHome;
                        document.querySelector(`[name="spokenLanguage"][value="${languageSelected}"]`).click();
                        var religionSelected =familyData.religion;
                        document.querySelector(`[name="religion"][value="${religionSelected}"]`).click();
                        var statusSelected = familyData.martialStatusofParents;
                        document.querySelector(`[name="parentStatus"][value="${statusSelected}"]`).click();
                        document.querySelector('[name="grade7_school_year"]').value = schoolActivity[3].schoolYear;
                        document.querySelector('[name="grade7_club_name"]').value = schoolActivity[3].clubName;
                        document.querySelector('[name="grade7_field_trips"]').value = schoolActivity[3].clubParticipation;
                        document.querySelector('[name="grade8_school_year"]').value = schoolActivity[4].schoolYear;
                        document.querySelector('[name="grade8_club_name"]').value = schoolActivity[4].clubName;
                        document.querySelector('[name="grade8_field_trips"]').value = schoolActivity[4].clubParticipation;
                        document.querySelector('[name="grade9_school_year"]').value = schoolActivity[5].schoolYear;
                        document.querySelector('[name="grade9_club_name"]').value = schoolActivity[5].clubName;
                        document.querySelector('[name="grade9_field_trips"]').value = schoolActivity[5].clubParticipation;
                        document.querySelector('[name="grade10_school_year"]').value = schoolActivity[0].schoolYear;
                        document.querySelector('[name="grade10_club_name"]').value = schoolActivity[0].clubName;
                        document.querySelector('[name="grade10_field_trips"]').value = schoolActivity[0].clubParticipation;
                        document.querySelector('[name="grade11_school_year"]').value = schoolActivity[1].schoolYear;
                        document.querySelector('[name="grade11_club_name"]').value = schoolActivity[1].clubName;
                        document.querySelector('[name="grade11_field_trips"]').value = schoolActivity[1].clubParticipation;
                        document.querySelector('[name="grade12_school_year"]').value = schoolActivity[2].schoolYear;
                        document.querySelector('[name="grade12_club_name"]').value = schoolActivity[2].clubName;
                        document.querySelector('[name="grade12_field_trips"]').value = schoolActivity[2].clubParticipation;
                        document.querySelector('[name="test_type_AI_test"]').value = abilityIntelligenceTest[0].testType;
                        document.querySelector('[name="date_AI_test"]').value = formatDate(abilityIntelligenceTest[0].currentDate);
                        document.querySelector('[name="grade_level_AI_test"]').value = abilityIntelligenceTest[0].currentGradeLevel;
                        document.querySelector('[name=grade7_date]').value = formatDate(abilityIntelligenceTest[3].dateAdministered);
                        document.querySelector('[name=grade7_test_administered]').value = abilityIntelligenceTest[3].testAdministered;
                        document.querySelector('[name=grade7_raw_score]').value = abilityIntelligenceTest[3].rawScore;
                        document.querySelector('[name=grade7_CA]').value = abilityIntelligenceTest[3].ca;
                        document.querySelector('[name=grade7_IQ_SAI]').value = abilityIntelligenceTest[3].iq_sai;
                        document.querySelector('[name=grade7_percentile]').value = abilityIntelligenceTest[3].percentile;
                        document.querySelector('[name=grade7_stanine]').value = abilityIntelligenceTest[3].stanine;
                        document.querySelector('[name=grade7_remarks]').value = abilityIntelligenceTest[3].remarks;
                        document.querySelector('[name=grade8_date]').value = formatDate(abilityIntelligenceTest[4].dateAdministered);
                        document.querySelector('[name=grade8_test_administered]').value = abilityIntelligenceTest[4].testAdministered;
                        document.querySelector('[name=grade8_raw_score]').value = abilityIntelligenceTest[4].rawScore;
                        document.querySelector('[name=grade8_CA]').value = abilityIntelligenceTest[4].ca;
                        document.querySelector('[name=grade8_IQ_SAI]').value = abilityIntelligenceTest[4].iq_sai;
                        document.querySelector('[name=grade8_percentile]').value = abilityIntelligenceTest[4].percentile;
                        document.querySelector('[name=grade8_stanine]').value = abilityIntelligenceTest[4].stanine;
                        document.querySelector('[name=grade8_remarks]').value = abilityIntelligenceTest[4].remarks;
                        document.querySelector('[name=grade9_date]').value = formatDate(abilityIntelligenceTest[5].dateAdministered);
                        document.querySelector('[name=grade9_test_administered]').value = abilityIntelligenceTest[5].testAdministered;
                        document.querySelector('[name=grade9_raw_score]').value = abilityIntelligenceTest[5].rawScore;
                        document.querySelector('[name=grade9_CA]').value = abilityIntelligenceTest[5].ca;
                        document.querySelector('[name=grade9_IQ_SAI]').value = abilityIntelligenceTest[5].iq_sai;
                        document.querySelector('[name=grade9_percentile]').value = abilityIntelligenceTest[5].percentile;
                        document.querySelector('[name=grade9_stanine]').value = abilityIntelligenceTest[5].stanine;
                        document.querySelector('[name=grade9_remarks]').value = abilityIntelligenceTest[5].remarks;
                        document.querySelector('[name=grade10_date]').value = formatDate(abilityIntelligenceTest[0].dateAdministered);
                        document.querySelector('[name=grade10_test_administered]').value = abilityIntelligenceTest[0].testAdministered;
                        document.querySelector('[name=grade10_raw_score]').value = abilityIntelligenceTest[0].rawScore;
                        document.querySelector('[name=grade10_CA]').value = abilityIntelligenceTest[0].ca;
                        document.querySelector('[name=grade10_IQ_SAI]').value = abilityIntelligenceTest[0].iq_sai;
                        document.querySelector('[name=grade10_percentile]').value = abilityIntelligenceTest[0].percentile;
                        document.querySelector('[name=grade10_stanine]').value = abilityIntelligenceTest[0].stanine;
                        document.querySelector('[name=grade10_remarks]').value = abilityIntelligenceTest[0].remarks;
                        document.querySelector('[name=grade11_date]').value = formatDate(abilityIntelligenceTest[1].dateAdministered);
                        document.querySelector('[name=grade11_test_administered]').value = abilityIntelligenceTest[1].testAdministered;
                        document.querySelector('[name=grade11_raw_score]').value = abilityIntelligenceTest[1].rawScore;
                        document.querySelector('[name=grade11_CA]').value = abilityIntelligenceTest[1].ca;
                        document.querySelector('[name=grade11_IQ_SAI]').value = abilityIntelligenceTest[1].iq_sai;
                        document.querySelector('[name=grade11_percentile]').value = abilityIntelligenceTest[1].percentile;
                        document.querySelector('[name=grade11_stanine]').value = abilityIntelligenceTest[1].stanine;
                        document.querySelector('[name=grade11_remarks]').value = abilityIntelligenceTest[1].remarks;
                        document.querySelector('[name=grade12_date]').value = formatDate(abilityIntelligenceTest[2].dateAdministered);
                        document.querySelector('[name=grade12_test_administered]').value = abilityIntelligenceTest[2].testAdministered;
                        document.querySelector('[name=grade12_raw_score]').value = abilityIntelligenceTest[2].rawScore;
                        document.querySelector('[name=grade12_CA]').value = abilityIntelligenceTest[2].ca;
                        document.querySelector('[name=grade12_IQ_SAI]').value = abilityIntelligenceTest[2].iq_sai;
                        document.querySelector('[name=grade12_percentile]').value = abilityIntelligenceTest[2].percentile;
                        document.querySelector('[name=grade12_stanine]').value = abilityIntelligenceTest[2].stanine;
                        document.querySelector('[name=grade12_remarks]').value = abilityIntelligenceTest[2].remarks;
                        
                    } else {
                        console.error('Request failed with status:', xhr.status);
                    }
                };
                xhr.onerror = function() {
                    console.error('Request Error...');
                };
                xhr.send(JSON.stringify({textData: baseStudentId}));
            }, 500);
        });
    });

     document.getElementById('edit_cummulative_record').addEventListener('click', function () {
        event.preventDefault();
        const baseStudentId = document.getElementById('studentId-cummilative-anecdotal').value;
        document.getElementById('studentIdField').value = baseStudentId;
     });

     function formatDate(date){
        let formattedDate = date.split('T')[0];
        return formattedDate;
     }
    </script>
        
</body>

</html>