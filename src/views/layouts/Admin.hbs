<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{!-- Store title variable --}}
    {{!-- <title>{{{pagetitle}}}</title> --}}
    <title>Admin View | AquiRe</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="/css/styles.css" rel="stylesheet" type="text/css">




        <script>
        function showAddUser() {
            const addUserForm = document.getElementById("add-user-form");
            addUserForm.showModal();
            console.log(addUserForm);
        }

        function hideAddUser() {
            const addUserForm = document.getElementById("add-user-form");
            addUserForm.close();
            console.log(addUserForm);
        }

        function showAddStudent() {
            const addStudentForm = document.getElementById("add-student-form");
            addStudentForm.showModal();
            console.log(addStudentForm);
        }

        function hideAddStudent(e) {
            e.preventDefault();
            const addStudentForm = document.getElementById("add-student-form");
            addStudentForm.close();
            console.log(addStudentForm);
        }
    </script>
</head>

<body id="add-user-body">

    {{> header title='Admin'}}

    <div class="container-fluid">
        
        <div class="row">
            <div class="col-6 m-auto">
                

                {{> student/StudentRow}}

                <div class="container-fluid">
                    <div class="row">
                            <div class="mb-3 row d-flex justify-content-center">
                                <button onclick="showAddUser()" class="btn btn-primary col-2"><i class="fa-solid fa-plus"></i>Add User</button>
                            </div>
                    </div>
                </div>

                <div class="container-fluid">
                    <div class="row">
                            <div class="mb-3 row d-flex justify-content-center">
                                <button onclick="showAddStudent()" class="btn btn-primary col-2">Add Student</button>
                            </div>
                    </div>
                </div>
                <dialog id="add-user-form">
                    <form action="/admin/user" method="POST">
                        <h1>Add User</h1>
                        <div class="mb-3 row">
                            <label for="userName" class="form-label col-4">Username</label>
                            <input type="text" class="form-control col" id="userName" name="userName" required>
                        </div>
                        <div class="mb-3 row">
                            <label for="userPassword" class="form-label col-4">Password</label>
                            <input type="password" class="form-control col" id="userPassword" name="userPassword" required>
                        </div>

                        <select id="userType" name="userType" required>
                            <option value="A">Admin</option>
                            <option value="G">Guidance</option>
                            <option value="D">Dental</option>
                        </select><br><br>
                        
                        <div class="mb-3 row d-flex justify-content-center">
                            <input class="btn btn-primary col-2" type="submit" value="Submit"  onclick="hideAddUser()">
                        </div>

                    </form>
                </dialog>

                <br><br>

                <dialog id="add-student-form">

                    <form action="/admin/student" method="POST" onsubmit="hideAddStudent()">
                        <h1>Add Student</h1>
                        <div class="mb-3 row">
                            <label for="student_id" class="form-label col-4">Student ID</label>
                            <input type="text" class="form-control col" id="student_id" name="student_id" required>
                        </div>
                        <div class="mb-3 row">
                            <label for="firstName" class="form-label col-4">First Name</label>
                            <input type="text" class="form-control col" id="firstName" name="firstName" required>
                        </div>
                        <div class="mb-3 row">
                            <label for="middleInitial" class="form-label col-4">Middle Initial</label>
                            <input type="text" class="form-control col" id="middleInitial" name="middleInitial">
                        </div>
                        <div class="mb-3 row">
                            <label for="lastName" class="form-label col-4">Last Name</label>
                            <input type="text" class="form-control col" id="lastName" name="lastName" required>
                        </div>
                        <div class="mb-3 row">
                            <label for="grade" class="form-label col-4">Grade</label>
                            <input type="text" class="form-control col" id="grade" name="grade" required>
                        </div>
                        <div class="mb-3 row">
                            <label for="section" class="form-label col-4">Section</label>
                            <input type="text" class="form-control col" id="section" name="section" required>
                        </div>
                        <div class="mb-3 row d-flex justify-content-center">
                            <input class="btn btn-primary col-2" type="submit" value="Submit">
                        </div>

                    </form>
                
                </dialog>
            </div>
        </div>

    </div>
</body>
