<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="/style.css">

    <script>
        // Function to handle "Start new school year" button click
        function handleStartNewSchoolYear() {
            
            const modal = new bootstrap.Modal(document.getElementById('exampleModal'));

            
            const confirmButton = document.getElementById('confirmStartNewYear');
            confirmButton.addEventListener('click', () => {
                
                fetch('/admin/startNewSchoolYear', {
                    method: 'POST',
                })
                .then(response => response.json())
                .then(data => {
                    console.log('Success:', data);
                
                })
                .catch((error) => {
                    console.error('Error:', error);
                    
                });

                
                modal.hide();
            });

        
            modal.show();
        }
    </script>
    
</head>

<body>

    {{!-- MESSAGE PARTIAL --}}
    {{#if message}}
    {{> Message message=message}}
    {{/if}}

    {{!-- NAVBAR PARTIAL --}}
    {{> navbar userRole='Admin' student_page="true"}}

    <div class="container-fluid">
        <div class="row mx-5">
            <aside class="col-2">
                <p class="fw-bold fs-4 mb-0">Enrolled Students</p>
                <p>SY 2023 - 2024</p>
                <ul class="sidebar-links nav flex-column">
                    {{!-- GRADELIST PARTIAL --}}
                    {{> grade_list label="Kinder" current="true"}}
                    {{> grade_list label="Senior Kinder" current=""}}
                    {{> grade_list label="Grade 1" current=""}}
                    {{> grade_list label="Grade 2" current=""}}
                    {{> grade_list label="Grade 3" current=""}}
                    {{> grade_list label="Grade 4" current=""}}
                    {{> grade_list label="Grade 5" current=""}}
                    {{> grade_list label="Grade 6" current=""}}
                    {{> grade_list label="Grade 7" current=""}}
                    {{> grade_list label="Grade 8" current=""}}
                    {{> grade_list label="Grade 9" current=""}}
                    {{> grade_list label="Grade 10" current=""}}
                    {{> grade_list label="Grade 11" current=""}}
                    {{> grade_list label="Grade 12" current=""}}
                </ul>
            </aside>

            <section class="flex-column col-10 p-2">
                <div class="row my-3">
                    <div class="d-flex justify-content-end">
                        <button type="button" class="button-yellow btn rounded-0 mx-3 border-0" onclick="handleStartNewSchoolYear()">Start new school year</button>

                        <button type="button" class="col-1 button-gray btn rounded-0 p-1">Bulk enroll</button>
                    </div>
                </div>


                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                            aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class=" modal-content p-5">
                                    <div class="modal-body border-0">
                                        <div class="container-fluid">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">You are starting a
                                                new school year</h1>
                                            <h2 class="fw-light fs-5" id="exampleModalLabel">(SY {{nextschoolyear}})</h2>
                                        </div>
                                        <div class="container-fluid">
                                            <p>All student records and data will be adjusted to reflect the new year.​
                                            </p>
                                            <p>Are you sure you want to begin the new school year?​​</p>
                                        </div>
                                    </div>
                                    <div class="modal-footer border-0 justify-content-center">
                                        <button type="button"  id="confirmStartNewYear"
                                            class="button-yellow btn rounded-0 mx-3 border-0y">Confirm</button>
                                        <button type="button" class="button-gray btn rounded-0 border-0" 
                                        data-dismiss="modal">Cancel</button>
                                    </div>
                                </div>
                            </div>
                </div>

                <form class="form input-group-custom" role="search">
                    <div class="row mx-half mb-0">
                        <div class="col-11 px-0">
                            <input class="form-control rounded-0 border" type="search" placeholder="Search"
                                aria-label="Search">
                        </div>
                        <div class="col px-0">
                            <button class="form-button-add text-center rounded-0 border w-100 display-block" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
                


                <form id="add-student-form" role="form" method="POST" action="/admin/students" class="input-group-custom my-3">
                    <div class="row mx-half mb-0">
                        <div class="col-11 px-0">
                            <div class="row mx-half mb-0 h-100">
                                <div class="col-2 px-0">
                                    <input required name="student_id" type="text"
                                        class="form-control rounded-0 border" placeholder="New Student ID" />
                                </div>
                                <div class="col-2 px-0">
                                    <input required name="lastName" type="text"
                                        class="form-control rounded-0 border" placeholder="Last Name" />
                                </div>
                                <div class="col-2 px-0">
                                    <input required name="firstName" type="text"
                                        class="form-control rounded-0 border" placeholder="First Name" />
                                </div>
                                <div class="col px-0">
                                    <input name="middleInitial" type="text" class="form-control rounded-0 border"
                                        placeholder="MI" />
                                </div>
                                <div class="col-3">
                                    <div class="row h-100">
                                        <div class="col-4 px-0">
                                            <input required name="grade" type="text" class="form-control rounded-0 border"
                                                placeholder="Grade" />
                                        </div>
                                        <div class="col-8 px-0">
                                            <input required name="section" type="text"
                                                class="form-control rounded-0 border" placeholder="Section" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col px-0">
                            <button type="submit" class="form-button-add text-center rounded-0 border w-100 display-block">
                                <i class="fa-solid fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </form>

                <div class="container-fluid">
                    <div class="row mt-3 table-header">
                        <div class="col-11 px-0">
                            <div class="row mx-half mb-0 h-100 fw-bold">
                                <div class="col-2 border border-white p-2">
                                    <span>Student ID</span>
                                </div>
                                <div class="col-2 border border-white p-2">
                                    <span>Last Name</span>
                                </div>
                                <div class="col-2 border border-white p-2">
                                    <span>First Name</span>
                                </div>
                                <div class="col border border-white p-2">
                                    <span>MI</span>
                                </div>
                                <div class="col-3">
                                    <div class="row">
                                        <div class="col-12 border border-white p-2">
                                            <span>Section</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col border border-white p-2">
                            <span></span>
                        </div>
                    </div>
                </div>

                <div class="data-table container-fluid">
                    {{#if students.length}}
                    {{#each students}}
                    {{!-- STUDENT INFO PARTIAL --}}
                    {{> student_info}}
                    {{/each}}
                    {{else}}
                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <span>No students found.</span>
                        </div>
                    </div>
                    {{/if}}
                </div>
        </div>

        </section>

    </div>



    <!-- Include Bootstrap JS (optional, for dropdown menus) -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/84cb3b7f2b.js" crossorigin="anonymous"></script>
    
    <script>
            document.getElementById('startNewSchoolYearBtn').addEventListener('click', function () {
                // Show the overlay
                document.getElementById('overlay').style.display = 'block';

                // Trigger the start new school year modal
                var myModal = new bootstrap.Modal(document.getElementById('startNewSchoolYearModal'));

                // Show the modal
                myModal.show();
            });

            document.getElementById('confirmStartNewSchoolYear').addEventListener('click', function () {
                // Trigger the start new school year functionality
                fetch('/admin/startNewSchoolYear', { method: 'POST' })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error(`Failed to start new school year. Status: ${response.status}`);
                        }
                        return response.json();
                    })
                    .then(data => {
                        console.log('Success:', data);

                        // Display a message (replace this with your actual logic)
                        alert('New school year started successfully!');
                    })
                    .catch(error => {
                        console.error('Error starting new school year:', error.message);

                        // Display an error message (replace this with your actual error handling logic)
                        alert('Failed to start new school year. Please try again.');
                    })
                    .finally(() => {
                        // Hide the modal and overlay
                        var myModal = new bootstrap.Modal(document.getElementById('startNewSchoolYearModal'));
                        myModal.hide();
                        document.getElementById('overlay').style.display = 'none';
                    });
            });

        </script>
</body>
</html>