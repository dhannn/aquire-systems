                        <input required name="lastName"   type="text" class="form-control col-3 rounded-0" placeholder="Last Name" />
                        <input required name="firstName" type="text" class="form-control col-3 rounded-0" placeholder="First Name" />
                        <input name="middleInitial" type="text" class="form-control col-2 rounded-0" placeholder="MI" />
                        <input required name="grade" type="text" class="form-control col-2 rounded-0" placeholder="Grade" />
                        <input required name="section" type="text" class="form-control col-2 rounded-0" placeholder="Section" />
                        <div class="col text-center rounded-0" role="button" tabindex="0" id="form-button-add" value="Submit">
                            <input class="col-3" type="submit" value="" style="position: absolute; background-color: transparent; height: 100%; right: 0; top: 0; padding: 0px 2px; border: none;"/>
